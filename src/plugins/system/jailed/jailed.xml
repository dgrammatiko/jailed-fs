<?xml version="1.0" encoding="utf-8"?>
<extension version="4.1" type="plugin" group="system" method="upgrade">
  <name>Jailed Media Manager</name>
  <author>Dimitris Grammatikogiannis</author>
  <creationDate>December 2021</creationDate>
  <copyright>(C) 2021 Dimitris Grammatikogiannis</copyright>
  <license>GNU General Public License version 2 or later;</license>
  <authorEmail>d.grammatiko@gmail.com</authorEmail>
  <authorUrl>dgrammatiko.dev</authorUrl>
  <version>1.0.0</version>
  <description>Jail users to their own images/username folder.</description>
  <namespace path="src">Joomla\Plugin\System\Jailed</namespace>
  <scriptfile>script.php</scriptfile>
  <files>
    <filename plugin="jailed">jailed.php</filename>
    <folder>src</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="jail_usergroups" type="usergrouplist" default="2" label="Jail User Groups" description="Select the user groups that will be jailed." />
        <!-- checksuperusergroup="1" multiple="true" -->
        <!-- layout="joomla.form.field.list-fancy-select" -->
      </fieldset>
    </fields>
  </config>
</extension>
